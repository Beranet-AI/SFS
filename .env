# ===========================
#  Django / Backend settings
# ===========================
DJANGO_SECRET_KEY=some-very-secret-key-change-me
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=*

# استفاده از PostgreSQL در Docker
USE_POSTGRES=true

POSTGRES_DB=smartfarm
POSTGRES_USER=smartfarm
POSTGRES_PASSWORD=smartfarm_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ===========================
#  Django API URLs
# ===========================
# از داخل Docker: سرویس django روی پورت 8000
DJANGO_API_BASE_URL=http://django:8000/api/v1
DJANGO_TOKEN_URL=http://django:8000/api/v1/auth/token/

# یوزر سرویسی که در Django ساختی
DJANGO_AUTH_USERNAME=service_user
DJANGO_AUTH_PASSWORD=service_password

# ===========================
#  FastAPI settings (اگر خواستی استفاده کنی)
# ===========================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=9000

# ===========================
#  Frontend (Next.js) – مقادیر public
# ===========================
# وقتی Next.js را لوکالی اجرا می‌کنی، APIها را از localhost ببین:
NEXT_PUBLIC_DJANGO_API_BASE_URL=http://127.0.0.1:8000/api/v1
NEXT_PUBLIC_FASTAPI_BASE_URL=http://127.0.0.1:9000
